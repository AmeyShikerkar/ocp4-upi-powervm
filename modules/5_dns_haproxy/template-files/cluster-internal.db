$TTL 12H
@                      IN   SOA   ns hostmaster (
                                  ${zone_serial_number}              ; serial
                                  1H                      ; refresh (1 hour)
                                  15M                     ; retry   (15 minutes)
                                  1W                      ; expiry  (1 week)
                                  1H )                    ; nx = nxdomain RRL (1 hour)
                       IN   NS    ns
ns                     IN   A     ${external_zone_dns_ip}

%{ for m in masters ~}
master-${m.index}       IN   A     ${m.ip}
%{ endfor ~}
%{ for w in workers ~}
worker-${w.index}      IN   A     ${w.ip}
%{ endfor ~}

bootstrap               IN   A     ${bootstrap_ip}

